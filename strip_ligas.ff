#!/usr/bin/fontforge

Open($1)

lookups = GetLookups("GSUB")
lookup_idx = 0

while (lookup_idx < SizeOf(lookups))
  lookup = lookups[lookup_idx]
  features = GetLookupInfo(lookup)[2]
  feature_idx = 0

  while (feature_idx < SizeOf(features))
    if (features[feature_idx][0] == "calt")
      RemoveLookup(lookup)
      break
    endif
    feature_idx++
  endloop
  lookup_idx++
endloop

Generate($1)
Close()